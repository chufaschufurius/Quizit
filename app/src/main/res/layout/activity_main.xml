<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/fondo_azul">

    <ImageView
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="150dp" />

    <Button
        android:drawableLeft="@drawable/logo_google_plus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conect with Google +"
        android:id="@+id/buttonGooglePlus"
        android:singleLine="false"
        android:background="#ffd34836"
        android:textColor="#ffffffff"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:drawableLeft="@drawable/logo_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conect with Facebook"
        android:id="@+id/buttonFacebook"
        android:singleLine="false"
        android:background="#ff3b5998"
        android:textColor="#ffffffff"
        android:layout_below="@+id/buttonGooglePlus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:drawableLeft="@drawable/logo_arroba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sing up with e-mail"
        android:id="@+id/buttonEMail"
        android:singleLine="false"
        android:background="#46e5e5e5"
        android:textColor="#ffffffff"
        android:layout_below="@+id/buttonFacebook"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/buttonLogin"
        android:background="#46e5e5e5"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/buttonEMail"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
